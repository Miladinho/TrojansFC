<div class="container">
<div class="navbar container-fluid">
	{{# each data.posts.results}}
		<div class="row color-scheme" style="margin-top:20px; margin-bottom: 20px; border-radius: 10px; background-color:darkgray;">
			<div class="col-md-8">
				<a class="text-color" style="font-size: 25px;"href="{{postUrl slug}}">{{{title}}}</a>
				<p class="lead text-muted">{{{categoryList categories prefix="Posted in "}}}
					{{#if author.name.first}}by {{author.name.first}}{{/if}} {{#if author.name.last}} {{author.name.last}}{{/if}}
				</p>
				<p>{{{content.brief}}}</p>
				{{#if content.extended}}<p class="read-more"><a href="{{postUrl slug}}">Read more...</a></p>{{/if}}
			</div>
			<div class="col-md-4">
				<div style="padding: 5px;">
					{{#if image}} <img src="{{{cloudinaryUrl image width=160 height=160 crop='fit' }}}"> 
					{{else}} <img src="/images/no-image.png"> {{/if}}
				</div>
			</div>
		</div>
	{{/each}}
	{{!-- {{>pagination}} --}}
</div>
</div>
