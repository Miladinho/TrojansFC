<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
			<article>
				{{!-- <p><a href="/blog">&larr; back to the blog</a></p>
				<hr> --}}
				<header class="page-header">
					<h1>{{data.post.title}}</h1>
				</header>
				<div class="post">
					{{#if data.post.image}}<img src="{{{cloudinaryUrl data.post.image width=750 height=450 crop='fit' }}}" class="img-responsive">{{/if}}
					<h3>
						{{#if data.post.author.name}}
							<small>Written by {{data.post.author.name.first}} {{data.post.author.name.last}}</small>
						{{/if}}
					</h3>
					<div class="">
						{{{data.post.content.extended}}}
					</div>
				</div>
			</article>
		</div>
	</div>
</div>
